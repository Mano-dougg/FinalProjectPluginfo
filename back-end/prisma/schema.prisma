generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produto {
  id Int @unique @id @default(autoincrement())
  nome String @unique
  imagePath imagePath[]
  marca String

  // Pre√ßo 
  preco Float
  preco_alterado String
  promocao Float

  descricao String
  quantidade_carrinho Int

  // Filtros
  face Boolean @default(false)
  labios Boolean @default(false)
  olhos Boolean @default(false)
  kits Boolean @default(false)
  sombrancelha Boolean @default(false)
  unhas Boolean @default(false)
  original Boolean @default(false)
}

model imagePath {
  id         Int      @id @unique @default(autoincrement())
  url        String
  produtoId  Int
  produto    Produto  @relation(fields: [produtoId], references: [id])
}
