// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produto {
  id Int @unique @id @default(autoincrement())
  nome String @unique
  imagePath String
  marca String

  // Pre√ßo 
  preco Float
  preco_alterado String
  promocao Float

  descricao String
  quantidade_carrinho Int

  // Filtros
  face Boolean @default(false)
  labios Boolean @default(false)
  olhos Boolean @default(false)
  kits Boolean @default(false)
  sombrancelha Boolean @default(false)
  unhas Boolean @default(false)
  original Boolean @default(false)
}